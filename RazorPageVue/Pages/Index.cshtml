<script src="~/compornents/vueRealInput.js" asp-append-version="true"></script>
<script src="~/compornents/vueTimeInput.js" asp-append-version="true"></script>

<script>
    // 【テスト用】実施中のエレメントの属性をアラート表示する（多いと大変なので修正が必要）
    function checkValues() {
        var findUl = document.getElementById('components-demo');

        showElementAttrs(findUl);
    }

    function showElementAttrs(parentEl) {


        var findLi = parentEl.children;

        for (var i = 0; i < findLi.length; i++) {
            var attrs = "";
            var attrList = findLi[i].attributes
            for (var j = 0; j < attrList.length; j++) {
                attrs += attrList[j].name + ":" + attrList[j].value + ",";
            }
            //alert(findLi[i].tagName + " => " + attrs);

            showElementAttrs(findLi[i]);
        }
    }
</script>

<form method="post">
    <div id="components-demo">
        <h1 class="display-4">各種コンポーネント</h1>
        <div class="content box">
