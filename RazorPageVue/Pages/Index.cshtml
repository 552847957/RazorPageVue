    ViewData["Title"] = "Home page";
}
@addTagHelper *,RazorPageVue

@*利用するVueコンポーネントをここで取り込む*@
<script src="~/js/vueUtil.js" asp-append-version="true"></script>
<script src="~/compornents/vueRadioButtons.js" asp-append-version="true"></script>
<script src="~/compornents/vueCheckButtons.js" asp-append-version="true"></script>
<script src="~/compornents/vueTextInput.js" asp-append-version="true"></script>
